---
import ReservasButton from './ReservasButton.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-[#fdf3d7]/80 backdrop-blur-sm shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between p-2 gap-3">
      <div class="flex flex-col text-xs">
        <span class="font-semibold">+57 311 711 9030</span>
        <span>Vereda La Palma</span>
        <span>Antioquia</span>
      </div>
      <div>
        <a href="/">
          <img src="/images/logo-mirador-color.png" alt="logo-mirador-color" class="max-w-[100px] h-auto object-contain">
        </a>
      </div>
      <ReservasButton />
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = mobileMenuButton?.querySelector('svg:first-child');
  const closeIcon = mobileMenuButton?.querySelector('svg:last-child');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script> 