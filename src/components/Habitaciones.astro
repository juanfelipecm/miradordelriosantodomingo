---
import UsersIcon from './UsersIcon';
import { Toilet, Utensils, Wifi } from 'lucide-react';
import { Image } from 'astro:assets';

// Import habitaciones images
import habitacionesImage1 from '../assets/images/habitaciones/hospedaje-mirador-rio-santo-domingo.jpeg';
import habitacionesImage2 from '../assets/images/habitaciones/hospedaje_mirador.jpeg';
import habitacionesImage3 from '../assets/images/habitaciones/hospedaje-mirador-2.jpeg';
---

<div class="flex flex-col md:flex-row m-6 p-6 gap-4 lg:max-h-[85vh] overflow-hidden">
  <div class="flex flex-col lg:flex-row gap-4">
    <!-- Div col info -->
    <div class="flex flex-col max-w-lg gap-2 justify-center lg:mr-10">
      <h5 class="text-sm">Hospedaje en</h5>
      <h2 class="text-5xl font-headings">Habitaciones</h2>
      <p class="text-sm max-w-md">Opciones de habitaciones para 2 y 4 personas, con ba√±o privado o compartido, disponible para grupos y familias</p>
      <!-- Div flex icons -->
      <div class="flex flex-row gap-2 mt-7">
        <div class="flex flex-col max-w-20">
          <UsersIcon client:load />
          <span class="text-xs leading-none">1, 2, o 4</span>
        </div>
        <div class="flex flex-col max-w-20">
          <Toilet client:load />
          <span class="text-xs leading-none">Privado o compartido</span>
        </div>
        <div class="flex flex-col max-w-20">
          <Utensils client:load />
          <span class="text-xs leading-none">Comida incluida</span>
        </div>
        <div class="flex flex-col max-w-20">
          <Wifi client:load />
          <span class="text-xs leading-none">WiFi</span>
        </div>
      </div>
    </div>  
      <!-- Div img 1 -->
      <div class="flex rounded-md overflow-hidden max-h-80 lg:max-h-max">
        <Image src={habitacionesImage1} alt="hospedaje-mirador-rio-santo-domingo" class="w-full h-full object-cover" />
      </div>  
      <!-- Div img 2 -->
      <div class="flex flex-row lg:flex-col gap-4 max-w-md">
        <div class="rounded-md overflow-hidden max-w-80 lg:max-w-56 mt-8">
          <Image src={habitacionesImage2} alt="hospedaje-mirador" class="w-full h-full object-cover" />
        </div>
        <div class="rounded-md overflow-hidden max-w-32 mb-11 lg:ml-24">
          <Image src={habitacionesImage3} alt="hospedaje-mirador" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
</div> 